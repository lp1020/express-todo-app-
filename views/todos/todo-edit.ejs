<!doctype html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <title>Add a To-Do</title>
  <link rel="stylesheet" type="text/css" href="styles/style.css">
</head>


<% include ../partials/top.ejs %>

<div class="todos">
  <h1><%= data.title %></h1>
  <h3><%= data.category %></h3>
  <h3><%= data.description %></h3>
  <form class="">?_method=PUT" method="post">
    <input name="title" type="text" placeholder="<%= data.title %>"/>
    <input name="category" type="text" placeholder="<%= data.category %>" />
    <input name="description" type="text" placeholder="<%= data.description %>"/>
    <input type="Submit" value="Update"/>
  </form>

</div>

<% include ../partials/bottom.ejs %>
</html>
